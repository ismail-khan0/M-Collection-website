{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",  // Ensures baseUrl is set to the root directory
    "paths": {
      "@/*": ["src/*"]  // Correctly map the @ alias to the src folder
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/Components/**/*.js",  // Ensure .js files under src/Components are included
    "src/Components/**/*.jsx", // Ensure .jsx files under src/Components are included
    "src/app/**/*.js",  // Ensure .js files under src/app are included
    "src/app/**/*.jsx"  // Ensure .jsx files under src/app are included
, "next.config.js"  ],
  "exclude": [
    "node_modules"
  ]
}
